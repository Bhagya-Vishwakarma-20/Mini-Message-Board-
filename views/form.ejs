<body>
    <div class="form">
        <form method="POST" action="/new">
            <input type="text" id="name" name="name"  placeholder="Enter your name">
            <input type="text"   name="text" placeholder="Type a message">
            <button type="submit" title="/new"></button>
         </form>
         
    </div>
